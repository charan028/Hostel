              <form action="/attend/save" method="post">
                <div class="card-body">
               
                    <div class="form-group">
                        <label for="exampleInputName">student name</label>
                        <input type="text" class="form-control" id="emp-ID" name="name" value="<%=a.name%>">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail">attendance date</label>
                        <input type="date" class="form-control" id="emp-Email" name="date" value="<%=a.date%>">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputDesignation">is present</label>
                        <select name="present" style="width: 100%;height: 35px;" >
                          <% for(let i=0;i<op.length;i++){%>
                          <option value="<%=op[i]%>"
                            <% if(JSON.stringify(a.present)==JSON.stringify(op[i])){%>
                            selected="selected"
                          <%}%>>
                          <%=op[i]%>  </option>
                          <%}%>
                          
                          </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputDOB">is leave</label>
                        <select name="leave" style="width: 100%;height: 35px;" >
                          <% for(let i=0;i<op.length;i++){%>
                          <option value="<%=op[i]%>"
                            <% if(JSON.stringify(a.leave)==JSON.stringify(op[i])){%>
                            selected="selected"
                          <%}%>>
                          <%=op[i]%>  </option>
                          <%}%>
                          
                          </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputDOB">remark</label>
