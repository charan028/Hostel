								<div class="card-header">
									<h3 class="card-title">Employee</h3>
								</div>
								<!-- /.card-header -->
								<!-- form start -->

								<form action="/emp/save" method="post">
									<div class="card-body">
										<div class="row">
											<div class="col">

												<div class="form-group">
													<label for="exampleInputID">Fullname</label>
													<input type="text" class="form-control" id="fname" name="fullname" value="<%=e.name%>">
												</div>

											</div>
											<div class="col">

												<div class="form-group">
													<label for="exampleInputName">Employee ID</label>
													<input type="text" class="form-control" id="emp-ID" name="empid" value="<%=e.empid%>">
												</div>

											</div>
											<div class="col">

												<div class="form-group">
													<label for="exampleInputEmail">Mobile no</label>
													<input type="text" class="form-control" id="emp-Email"
														name="mobileno" value="<%=e.mobile%>">
												</div>
											</div>

										</div>

										<div class="row">
											<div class="col">

												<div class="form-group">
													<label for="exampleInputID">Employee Type</label>
													<select name="emptype" style="width: 100%;height: 35px;" >
														<% for(let i=0;i<type.length;i++){%>
														<option value="<%=type[i]%>"
														  <% if(JSON.stringify(e.type)==JSON.stringify(type[i])){%>
														  selected="selected"
														<%}%>>
														<%=type[i]%>  </option>
														<%}%>
													  
													  </select>
												</div>

											</div>
			
											<div class="col">

												<div class="form-group">
													<label for="exampleInputEmail">Desgnation</label>
													<input type="text" class="form-control" id="emp-Email"
														name="empdes" value="<%=e.des%>">
												</div>
											</div>

											<div class="col">
	
												<div class="form-group">
													<label for="exampleInputID">Block no</label>
													<select name="block" style="width: 100%;height: 35px;" >
														<% for(let i=0;i<blocks.length;i++){%>
														<option value="<%=blocks[i]%>"
														  <% if(JSON.stringify(e.block)==JSON.stringify(blocks[i])){%>
														  selected="selected"
														<%}%>>
														<%=blocks[i]%>  </option>
														<%}%>
													  
													  </select>
												</div>
	
											</div>
										</div>
										<div class="row">
											<div class="col">

												<div class="form-group">

												
													<div class="form-group">
														<label for="exampleInputEmail">gender</label>
														<select name="gender" style="width: 100%;height: 35px;" >
															<% for(let i=0;i<gen.length;i++){%>
